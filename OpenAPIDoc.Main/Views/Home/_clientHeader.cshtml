@using System.ComponentModel

<div id="clientheader" class="col-md-12 app-inner-layout__content">
    <div class="col-md-8 pb-5 pl-5 pr-5 pt-3 card">
        <h4>ClientHeader</h4>
        <div class="p-3">
            Methods for Addresses
        </div>
        <div>
            <table class="responsive table table-light table-striped small">
                <thead>
                    <tr>
                        <th class=" col-md-3">Request Body Schema</th>
                        <th class=" col-md-3">Data Type</th>
                        <th class=" col-md-6">Descriptions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in ViewBag.clientHeader)
                    {
                        <tr class="line-height-1">
                            <td class="align-top">
                                @p.name
                            </td>
                            <td class="align-top">
                                @if (p.type.IndexOf("Dto") > -1)
                                {
                                    <p class="m-1">Json array of @p.name request parameters</p>
                                }
                                else
                                {
                                    <p class="m-1">@p.type</p>
                                }
                            </td>
                            <td class="align-top">
                                @if (p.isOptional)
                                {
                                    <div class="m-1"><b><i>(Optional)</i></b></div>
                                }
                                <div class="m-1">@p.description</div>
                                @if (p.values != null)
                                {
                                    <div class="m-1 font-italic bg-dark-gray">
                                        Enum:
                                        @foreach (var v in p.values)
                                        {
                                            <span class="badge badge-dark">"@v"</span>
                                        }
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4 p-2 text-light">
        <div id="clientheadercreate" class="bg-dark p-3 method">
            <h6>Create Address</h6>
            <div><button class="badge badge-light">PAYLOAD</button></div>
            <div class="dropdown-divider"></div>
            <div>
                <button class="badge badge-pill badge-info">POST</button><span class="float-right font-weight-bold">/api/addressbook/create</span>
            </div>
            <div>
                <span>Content Type: </span><span class="float-right font-weight-bold">application/json</span>
            </div>
            <div class="m-3"></div>
            <div>
                <button type="button" aria-expanded="true" aria-controls="exampleAccordion1" data-toggle="collapse" href="#clientHeaderCreateReq" class="btn btn-primary">
                    Sample Request
                </button>
                <div class="collapse" id="clientHeaderCreateReq">
                    <div class="card card-body bg-dark">
                        <pre class="text-light font-italic">
{
    "Name": "John Doe",
    "IsActive": true,
    "IsAgent": false,
    "IsConsignee": true,
    "IsConsignor": false,
    "IsBroker": false,
    "IsCarrier": false,
    "IsPayable": false,
    "IsReceivable": false,
    "Address1": "1",
    "Address2": "Loro Street",
    "Suburb": "Talipapa",
    "City": "Quezon City",
    "PostCode": "1116",
    "State": "MM",
    "Country": "Philippines",
    "Port": "Manila",
    "ABN": "123123",
    "MainEmail": "francis@mail.com",
    "MainPhone": "+63123456789",
    "MainContact": "Francis"
}
                        </pre>
                    </div>
                </div>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Success Response</b> - <span>200 <i>(indicates that the request was processed successfully.)</i></span>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Response: </b>
                <p><i>{ "Code" : "ABCDEF0000000001" }</i></p>
            </div>
        </div>
        <div id="clientheadergetall" class="bg-dark p-3 method">
            @*<div><button class="badge badge-light">PAYLOAD</button></div>*@
            <h6>Get All Addresses</h6>
            <div class="dropdown-divider"></div>
            <div>
                <button class="badge badge-pill badge-warning">GET</button><span class="float-right font-weight-bold">/api/addressbook</span>
            </div>
            <div>
                <span>Content Type: </span><span class="float-right font-weight-bold">application/json</span>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Success Response</b> - <span>200 <i>(indicates that the request was processed successfully.)</i></span>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Response: </b>
                <p><i>List of active ClientHeader records in Json format.</i></p>
            </div>
        </div>
        <div id="clientheadergetbyreference" class="bg-dark p-3 method">
            @*<div><button class="badge badge-light">PAYLOAD</button></div>*@
            <h6>Search Address</h6>
            <div class="dropdown-divider"></div>
            <div>
                <button class="badge badge-pill badge-warning">GET</button><span class="float-right font-weight-bold">/api/addressbook/getbyreference</span>
            </div>
            <div>
                <span>Content Type: </span><span class="float-right font-weight-bold">application/json</span>
            </div>
            <div class="m-3"></div>
            <div>
                <p class="font-weight-bold">Parameters</p>
                <p>
                    "reference" - <i>either reference code or client name</i>
                    <br />
                    "field" - <i>either "name" if getting by name, or "code" if getting by reference code</i>
                    <br />
                    eg. <i>/api/addressbook/getbyreference?reference=ABCDEF0000000001&field=code</i>
                </p>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Success Response</b> - <span>200 <i>(indicates that the request was processed successfully.)</i></span>
            </div>
            <div class="m-3"></div>
            <div>
                <b>Response: </b>
                <p><i>List of active ClientHeader records in Json format.</i></p>
            </div>
        </div>
    </div>
</div>